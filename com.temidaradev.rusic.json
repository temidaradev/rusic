{
    "app-id": "com.temidaradev.rusic",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "rusic",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=session-bus",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.portal.Desktop",
        "--talk-name=org.a11y.Bus",
        "--filesystem=home",
        "--env=LANG=C.UTF-8"
    ],
    "modules": [
        {
            "name": "libxdo",
            "buildsystem": "simple",
            "build-commands": [
                "make INSTALL_MAN=0 PREFIX=/app",
                "make install INSTALL_MAN=0 PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/jordansissel/xdotool.git",
                    "tag": "v4.20251130.1"
                }
            ]
        },
        {
            "name": "rusic",
            "buildsystem": "simple",
            "build-options": {
                "build-args": [
                    "--share=network"
                ],
                "env": {
                    "CARGO_HOME": "/run/build/rusic/cargo",
                    "LIBRARY_PATH": "/app/lib",
                    "LD_LIBRARY_PATH": "/app/lib",
                    "PKG_CONFIG_PATH": "/app/lib/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig"
                }
            },
            "build-commands": [
                "curl https://sh.rustup.rs -sSf | sh -s -- -y",
                ". $CARGO_HOME/env && rustup default stable && cargo build --release --package rusic",
                "install -Dm755 target/release/rusic -t /app/bin/",
                "cp -r rusic/assets /app/bin/",
                "install -Dm644 data/com.temidaradev.rusic.desktop -t /app/share/applications/",
                "install -Dm644 rusic/assets/logo.png /app/share/icons/hicolor/scalable/apps/com.temidaradev.rusic.png"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}