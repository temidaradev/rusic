{
    "app-id": "com.temidaradev.rusic",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "rusic",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-music:ro",
        "--filesystem=xdg-download:ro",
        "--filesystem=xdg-run/discord-ipc-0",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.mpris.MediaPlayer2.*",
        "--own-name=org.mpris.MediaPlayer2.rusic",
        "--env=LD_LIBRARY_PATH=/app/lib"
    ],
    "modules": [
        {
            "name": "xdotool",
            "buildsystem": "simple",
            "build-commands": [
                "make INSTALL_MAN=0 PREFIX=/app",
                "make install INSTALL_MAN=0 PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/jordansissel/xdotool.git",
                    "tag": "v4.20251130.1"
                }
            ]
        },
        {
            "name": "rusic",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 rusic /app/bin/rusic",
                "mkdir -p /app/bin/assets",
                "cp -r assets/* /app/bin/assets/",
                "install -Dm644 com.temidaradev.rusic.desktop -t /app/share/applications/",
                "install -Dm644 com.temidaradev.rusic.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 logo.png /app/share/icons/hicolor/512x512/apps/com.temidaradev.rusic.png",
                "install -Dm644 logo.png /app/share/icons/hicolor/128x128/apps/com.temidaradev.rusic.png"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "target/dx/rusic/release/linux/app/rusic"
                },
                {
                    "type": "dir",
                    "path": "target/dx/rusic/release/linux/app/assets",
                    "dest": "assets"
                },
                {
                    "type": "file",
                    "path": "data/com.temidaradev.rusic.desktop"
                },
                {
                    "type": "file",
                    "path": "data/com.temidaradev.rusic.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "rusic/assets/logo.png"
                }
            ]
        }
    ]
}